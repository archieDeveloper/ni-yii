.post
  margin 15px 0 0 0
  position relative
  -webkit-user-select none
  -moz-user-select none
  user-select none

.title_post
  color #444

.content_post
  padding 15px 48px
  background #f5f5f5
  margin 0 0 15px
  height 210px
  overflow hidden

.mini_post
  width 190px
  height 190px
  background #555
  float left
  margin 0 34px
  border 10px solid rgb(250,250,250)
  border-radius 3px
  box-shadow 0 0 0 1px rgb(69, 100, 139), 0 0 8px rgba(0,0,0,0.3)
  cursor pointer

.left_post
  position absolute
  left 0
  top 56px
  background #363636
  color #fff
  border-radius 3px
  line-height 182px
  height 182px
  padding 15px
  font-size 36px
  font-weight bold
  &:hover
    cursor: pointer
    background: #CC1558

.right_post
  position absolute
  right 0
  top 56px
  background #363636
  color #fff
  border-radius 3px
  line-height 182px
  height 182px
  padding 15px
  font-size 36px
  font-weight bold
  & :hover
    cursor: pointer
    background: #CC1558