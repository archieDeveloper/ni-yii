.desc-slide
  margin-top 25px
  font-family font-header
  float right
  &.left
    float left
  &.right
    float right
  &.center
    float: none
    & .pink, & .gray, & .black
      margin 0 auto
      float none
      display block
      width 350px
      border-radius 0 5px 5px 5px
    & .payment
      font-size 180px
      text-align center
      margin 0 auto
      display block
      color #E73232
      text-transform uppercase
      font-weight bold
      text-shadow 0 4px 8px rgba(0,0,0,0.4)
  & .pink
    background #E61F50 url(/images/ui/menu-tail.gif)
    padding 20px 50px
    font-size 35px
    display inline-block
    float right
    border-radius 3px
  & .gray
    background #242424 url(/images/ui/main-tail.gif)
    padding 20px 50px
    font-size: 20px
    display inline-block
    float right
    border-radius 3px
  & .black
    background #000
    padding 20px
    &.transparent
      background-color rgba(0,0,0,.8)
      position relative
      &:before
        position absolute
        right 100%
        top 0
        content ''
        display block
        width 0
        height 0
        border-style solid
        border-width 0 40px 60px 0
        border-color transparent rgba(0,0,0,.8) transparent transparent

.swiper-container
  width 100%
  height 500px

.swiper-slide img
  width 100%

.slide-img
  width 100%
  height 100%
  background-size cover
  background-position center

span
  &.swiper-pagination-bullet
    background #fff
    opacity .5
    width 10px
    height 10px
    &.swiper-pagination-bullet-active
      opacity 1