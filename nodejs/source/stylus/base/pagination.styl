.pagination
  list-style-type none
  margin-bottom 15px
  margin-right 30px
  & li
    float left
    & a
      display block
      padding 0 12px
      color #fff
      font-weight bold
      border-radius 3px
      background #363636
      height 30px
      line-height 30px
      text-align center
      margin-right 10px
      text-decoration none
      text-transform uppercase
      font-size 12px
      font-family font-header
      &:hover
        background #CC1558
      &.active
        background transparent
        text-decoration none
        cursor default
        color #444
        padding 0
    &.count-elem
      float right
      font-family font-header
      line-height 30px
      color #aaa