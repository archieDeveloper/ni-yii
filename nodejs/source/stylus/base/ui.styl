.button
  color #fff
  padding 10px 15px 8px 15px
  border 0
  border-radius 3px
  background #363636
  text-transform uppercase
  font-size 16px
  font-weight bold
  outline none
  font-family font-header
  &:hover
    cursor pointer
    color #fff
    background #CC1558
  &.think
    background transparent
    border 2px solid #363636
    color #363636
    opacity 0.7
    padding 8px 15px 6px 15px
    &:hover
      opacity 1
    &.white
      background transparent
      border 2px solid #fff
      color #fff
      opacity 0.7
      &:hover
        opacity
  &.big
    font-size 25px
    -webkit-transition .2s ease-out
    -moz-transition .2s ease-out
    -o-transition .2s ease-out
    -ms-transition .2s ease-out
    transition .2s ease-out
    cursor pointer
    background-color #77B3D4
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
    padding 20px 30px 18px 30px
    &:hover
      box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)
      background-color #91C7E5
    & i[class^="flaticon-"]
      font-size 30px
      vertical-align: middle
      margin-left 30px
      background-color #FFF
      color #77B3D4
      border-radius 50px
      padding 10px

.form
  & input, & textarea
    padding 7px
    margin 0 0 15px 0
    border 1px solid #eee
    outline none
    border-radius 3px
    font-family 'PT Sans', Arial, serif
    color: #444
    width: 100%
    box-sizing border-box
    &:focus
      border 1px solid #1591CC
  & label
    font-weight bold
    font-size 14px
    display block
    margin-bottom 5px
    font-family font-header
    text-transform uppercase

.select
  display block
  width 84px
  height 43px
  float left
  margin-right 10px
  & .drop
    display none

.select-prev
  float left
  margin-top 6px
  margin-right 10px
  font-size 16px

.slct
  float left
  display block
  position relative
  background #fff
  width 50px
  padding 2px 10px
  color #444
  text-decoration none
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  -o-text-overflow ellipsis
  border-radius 3px
  font-size 13px
  margin-right 10px
  line-height 25px
  border 2px solid #EEE
  & span
    float left
  & i
    color #444
    float right
    background rgba(0, 0, 0, 0)
    height 30px
    line-height 32px
    width 30px
    margin -2px -10px -3px 0
    text-align center
  &.active
    border-color: #1591CC
    border-radius 3px 3px 0 0

.drop
  margin 0
  padding 5px 0
  width 70px
  display none
  float left
  background #fff
  color #444
  border-radius 0 0 3px 3px
  list-style-type none
  border 2px solid #EEE
  height 130px
  overflow-y scroll
  & li
    margin 0
    cursor pointer
    padding 5px 10px
    font-size 14px
    &:hover
      background #fafafa

.cleaner
  float none
  clear both